      a(href="#")
        div.header__desplegable--socialMedia__facebook
          span(class="icon-facebook-with-circle")
      a(href="#")
        div.header__desplegable--socialMedia__instagram
          span(class="icon-instagram")
      a(href="#")
        div.header__desplegable--socialMedia__twitter
          span(class="icon-twitter-with-circle")
